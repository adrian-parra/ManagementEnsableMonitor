<!-- Modal Agregar Encargados Mejorado -->
<div class="modal fade modal-modern" id="modalEncargados" tabindex="-1" aria-labelledby="modalEncargadosLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header card-header-gradient">
                <div class="d-flex align-items-center">
                    <div class="modal-icon-container me-3">
                        <i class="bi bi-person-plus-fill"></i>
                    </div>
                    <div>
                        <h5 class="modal-title mb-1" id="modalEncargadosLabel">Gestión de Encargados</h5>
                        <small class="opacity-75">Asignar responsables por turno de trabajo</small>
                    </div>
                </div>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4">
                <form id="formAgregarEncargado">
                    <!-- Sección de Configuración Básica -->
                    <div class="form-section mb-4">
                        <h6 class="section-title">
                            <i class="bi bi-gear-fill me-2"></i>
                            Configuración Básica
                        </h6>
                        <div class="row g-3">
                            <div class="col-md-6">
                                <label for="selectLider" class="modern-label">
                                    <i class="bi bi-person-badge"></i>
                                    Líder Asignado
                                </label>
                                <div class="modern-input-group input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-award-fill"></i>
                                    </span>
                                    <select id="selectLider" class="form-select" disabled>
                                        <option selected disabled value="">👤 Seleccione un líder...</option>
                                        <!-- Las opciones de líderes se cargarán dinámicamente -->
                                    </select>
                                </div>
                                <small class="text-muted mt-1 d-block">
                                    <i class="bi bi-info-circle me-1"></i>
                                    Líder responsable del turno
                                </small>
                            </div>
                            <div class="col-md-6">
                                <label for="selectTurno" class="modern-label">
                                    <i class="bi bi-clock"></i>
                                    Turno de Trabajo
                                </label>
                                <div class="modern-input-group input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-clock-fill"></i>
                                    </span>
                                    <select id="selectTurno" class="form-select">
                                        <option selected disabled value="">⏰ Seleccione un turno...</option>
                                        <option value="a">🌅 Turno A (06:00 - 14:00)</option>
                                        <option value="b">🌞 Turno B (14:00 - 22:00)</option>
                                        <option value="c">🌙 Turno C (22:00 - 06:00)</option>
                                    </select>
                                </div>
                                <small class="text-muted mt-1 d-block">
                                    <i class="bi bi-info-circle me-1"></i>
                                    Horario de responsabilidad
                                </small>
                            </div>
                        </div>
                    </div>

                    <!-- Sección de Búsqueda de Empleado -->
                    <div class="form-section mb-4">
                        <h6 class="section-title">
                            <i class="bi bi-search me-2"></i>
                            Búsqueda de Empleado
                        </h6>
                        <div class="row g-3">
                            <div class="col-md-8">
                                <label for="inputRelojUsuario" class="modern-label">
                                    <i class="bi bi-credit-card-2-front"></i>
                                    Número de Reloj
                                </label>
                                <div class="modern-input-group input-group">
                                    <span class="input-group-text">
                                        <i class="bi bi-person-vcard"></i>
                                    </span>
                                    <input type="text" class="form-control" id="inputRelojUsuario"
                                        placeholder="Ingrese el número de reloj del empleado">
                                    <button class="modern-btn btn-gradient-primary" type="button" id="btnBuscarEmpleado">
                                        <i class="bi bi-search me-1"></i>
                                        Buscar
                                    </button>
                                </div>
                                <small class="text-muted mt-1 d-block">
                                    <i class="bi bi-lightning-fill me-1"></i>
                                    Ingrese el número y presione buscar para obtener información
                                </small>
                            </div>
                            <div class="col-md-4">
                                <label class="modern-label">
                                    <i class="bi bi-camera"></i>
                                    Fotografía
                                </label>
                                <div class="employee-photo-container">
                                    <div id="empleadoImageContainer" class="d-flex justify-content-center align-items-center">
                                        <div id="empleadoImagePlaceholder" class="employee-placeholder">
                                            <i class="bi bi-person"></i>
                                            <small class="mt-2">Sin foto</small>
                                        </div>
                                        <img id="empleadoImage" class="employee-photo d-none" alt="Foto del empleado">
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Información del Empleado -->
                    <div id="empleadoInfo" class="employee-info-card d-none">
                        <div class="d-flex align-items-center">
                            <div class="info-icon">
                                <i class="bi bi-person-check-fill"></i>
                            </div>
                            <div class="flex-grow-1">
                                <h6 class="mb-1">Empleado Encontrado</h6>
                                <span id="empleadoNombre" class="text-muted">Información del empleado</span>
                            </div>
                            <div class="status-badge">
                                <i class="bi bi-check-circle-fill me-1"></i>
                                Verificado
                            </div>
                        </div>
                    </div>

                    <button type="submit" id="btnSubmitGuardarEncargadoLinea" class="d-none">Guardar</button>
                </form>
            </div>
            <div class="modal-footer bg-light">
                <button type="button" class="modern-btn btn-gradient-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-2"></i>
                    Cancelar
                </button>
                <button type="button" class="modern-btn btn-gradient-success" id="btnGuardarEncargado">
                    <i class="bi bi-save me-2"></i>
                    Guardar Encargado
                </button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Cargar Imagen del Carro Mejorado -->
<div class="modal fade modal-modern" id="modalCargarImagen" tabindex="-1" aria-labelledby="modalCargarImagenLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg">
        <div class="modal-content">
            <div class="modal-header card-header-info">
                <div class="d-flex align-items-center">
                    <div class="modal-icon-container me-3">
                        <i class="bi bi-image-fill"></i>
                    </div>
                    <div>
                        <h5 class="modal-title mb-1" id="modalCargarImagenLabel">Gestión de Imágenes</h5>
                        <small class="opacity-75">Cargar imagen del carro de línea de producción</small>
                    </div>
                </div>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body p-4">
                <form id="formCargarImagen">
                    <!-- Área de Carga de Archivos -->
                    <div class="form-section mb-4">
                        <h6 class="section-title">
                            <i class="bi bi-cloud-upload-fill me-2"></i>
                            Subir Imagen
                        </h6>
                        <div class="upload-container">
                            <div id="dropArea" class="drag-drop-area text-center position-relative">
                                <input class="position-absolute opacity-0 top-0 start-0 w-100 h-100" type="file" 
                                       id="inputImagenCarro" accept="image/*" style="cursor: pointer;">
                                <div class="upload-content py-4">
                                    <div class="upload-icon mb-3">
                                        <i class="bi bi-cloud-arrow-up-fill"></i>
                                    </div>
                                    <h5 class="upload-title mb-2">Arrastra y suelta tu imagen aquí</h5>
                                    <p class="upload-subtitle mb-3">o haz clic para seleccionar desde tu dispositivo</p>
                                    <div class="upload-specs">
                                        <span class="spec-item">
                                            <i class="bi bi-file-earmark-image me-1"></i>
                                            JPG, PNG, GIF
                                        </span>
                                        <span class="spec-item">
                                            <i class="bi bi-hdd me-1"></i>
                                            Máx. 5MB
                                        </span>
                                        <span class="spec-item">
                                            <i class="bi bi-aspect-ratio me-1"></i>
                                            Recomendado: 1920x1080
                                        </span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Vista Previa de la Imagen -->
